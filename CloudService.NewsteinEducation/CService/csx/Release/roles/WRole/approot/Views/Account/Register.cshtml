@model WRole.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<div class="page-signup">
    <div class="signin-header">
        <div class="container text-center">
            <section class="logo">
                <a href="@Url.Action("Index", "Start")">Newstein Education</a>
            </section>
        </div>
    </div>
    <div class="signup-body">
        <div class="container">
            <div class="form-container">
                <section id="socialLoginForm" class="row signin-social text-center">

                    @Html.Partial("_ExternalLoginsListPartial", new WRole.Models.ExternalLoginViewModel() { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl })

                </section>
                <span class="line-thru">OR</span>
                <section>



                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                       
                        @Html.ValidationSummary()
        
                        
                          <div class="form-group">
                            <div class="input-group input-group-lg">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-user"></span>
                                </span>
                                @Html.TextBoxFor(m => m.UserName, new { @type = "email", @placeholder = "Email", @class = "form-control" })
                            </div>
                              @Html.ValidationMessageFor(m => m.UserName)


                        </div>
                 
                        <div class="form-group">

                            <div class="input-group input-group-lg">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-lock"></span>
                                </span>
                                @Html.PasswordFor(m => m.Password, new {@placeholder="Password", @class = "form-control" })
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Confirm password", @class = "form-control" })


                            </div>
                            @Html.ValidationMessageFor(m => m.Password)

                            @Html.ValidationMessageFor(m => m.ConfirmPassword)


                        </div>
                        
                        
               
                        
     
                        <div class="form-group">
                            <p class="text-muted text-small">By clicking on Sign up, you agree to <a href="#">terms & conditions</a> and <a href="#;">privacy policy</a></p>
                            <div class="divider"></div>
                            <button type="submit"
                                    class="btn btn-primary btn-block btn-lg">
                                Register
                            </button>
                        </div>
                        
      
                        }

                </section>
                <section>
                    <p class="text-center text-muted">
                        Already have an account?

                        @Html.ActionLink("Log in now", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                    </p>
                </section>
            </div>
        </div>
    </div>
</div>






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
